<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ActivityMainMenu">

    <RelativeLayout
        android:id="@+id/mainmenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:textSize="80sp"
            android:textStyle="bold"
            android:textColor="@color/title"
            android:layout_marginBottom="80dp"
            android:layout_above="@+id/playBtn"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/playBtn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/btnText"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false"
            android:onClick="onClickMatch (ActivityMainMenu)"
            />

        <Button
            android:id="@+id/checkBtn"
            android:text="@string/check"
            android:textColor="@color/btnText"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="@dimen/btnOffset"
            android:layout_below="@+id/playBtn"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:onClick="onClickCheck"
            />

        <Button
            android:id="@+id/helpBtn"
            android:text="@string/help"
            android:textColor="@color/btnText"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="@dimen/btnOffset"
            android:layout_below="@+id/checkBtn"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:onClick="onClickHelp"
            />
    </RelativeLayout>




</RelativeLayout>